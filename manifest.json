{
    "name": "花骑启动器",
    "version": "1.0.1",
    "manifest_version": 2,
    "description": "使用大小适宜的独立窗口启动《美少女花骑士》",
    "author": "MoeKagari",
    "background": {
        "scripts": [
            "script/background/background.js",
            "script/background/screenShot.js",
            "script/background/zoom.js",
            "script/background/sound.js",
            "script/background/other.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "使用大小适宜的独立窗口启动《美少女花骑士》"
    },
    "permissions": ["downloads", "tabs", "notifications", "<all_urls>", "webNavigation"],
    "options_page": "option.html"
}
